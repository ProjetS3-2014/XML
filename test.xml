<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/button_onglet"
	    android:layout_width="match_parent"     
	    android:layout_height="wrap_content" 
	    android:text="@string/onglet"
	    android:textStyle="bold"
	    android:gravity="center"/>
    
    <Button
        android:id="@+id/button_liste_lecture"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/liste_lecture"
	    android:textStyle="bold"
	    android:gravity="center"/>
    
    <Button
        android:id="@+id/button_liste_appareils"
	   	android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:text="@string/liste_appareils"
	    android:textStyle="bold"
	    android:gravity="center"/>
	    
    
    <Button 
        android:id="@+id/button_parametres"
	   	android:layout_width="match_parent" 
	  	android:layout_height="wrap_content" 
	    android:text="@string/parametres"
	    android:textStyle="bold"
	    android:gravity="center"/>
    

</LinearLayout>
